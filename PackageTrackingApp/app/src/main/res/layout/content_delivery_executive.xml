<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="team4.packagetrackingapp.DeliveryExecutive"
    tools:showIn="@layout/activity_delivery_executive">

    <Button
        android:id="@+id/start_delivery_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="16dp"
        android:layout_marginStart="22dp"
        android:text="Start Delivery"
        tools:layout_editor_absoluteX="26dp"
        tools:layout_editor_absoluteY="447dp" />

    <Button
        android:id="@+id/stop_delivery_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/start_delivery_btn"
        android:layout_alignBottom="@+id/start_delivery_btn"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="17dp"
        android:text="Stop Delivery"
        tools:layout_editor_absoluteX="253dp"
        tools:layout_editor_absoluteY="447dp" />

    <TextView
        android:id="@+id/coordinates_tv"
        android:layout_width="240dp"
        android:layout_height="310dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"
        android:text="Coordinates"
        tools:layout_editor_absoluteX="65dp"
        tools:layout_editor_absoluteY="28dp" />
</RelativeLayout>